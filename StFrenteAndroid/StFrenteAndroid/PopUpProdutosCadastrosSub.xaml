                        <Label  x:Name="IdFornecedores"
                            Text="Fornecedores"
                                TextColor="Black"
                                           FontSize="18"
                                           VerticalOptions="StartAndExpand" />
                    </StackLayout>
                </StackLayout>
            </Frame>
            <Frame OutlineColor="Gray"
                               Padding="4">
                <StackLayout Orientation="Horizontal">
                    <!--<BoxView Color="Black"
                                         WidthRequest="50"
                                         HeightRequest="50" /> -->
                    <StackLayout Margin="10,0,0,0">
