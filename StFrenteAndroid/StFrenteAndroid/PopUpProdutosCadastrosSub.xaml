            </Frame>
            <Frame OutlineColor="Gray"
                               Padding="4">
                <StackLayout Orientation="Horizontal">
                    <!--<BoxView Color="Black"
                                         WidthRequest="50"
                                         HeightRequest="50" /> -->
                    <StackLayout Margin="10,0,0,0">
                        <Label  x:Name="IdCNCM"
                            Text="C.N.C."
